{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "minisoft-editor",
  "version": "0.1.0",
  "identifier": "tauri.conf.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MiniSoft Editor",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/minisoft-icon.png",
      "icons/minisoft-icon.icns",
      "icons/minisoft-icon.ico"
    ]
  }
}
